<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/dialog_new_points_fragment_titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:elevation="@dimen/elevation_small"
        android:gravity="center"
        android:padding="@dimen/spacing_tiny"
        android:text="@string/dialog_new_points_fragment_title_text"
        android:textAppearance="@style/Text.Bold.24.White"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/dialog_new_points_fragment_countEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_huge"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginEnd="@dimen/spacing_huge"
        android:backgroundTint="@android:color/white"
        android:gravity="center"
        android:inputType="number"
        android:textColor="@android:color/white"
        android:textCursorDrawable="@null"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_new_points_fragment_titleText" />

    <Button
        android:id="@+id/dialog_new_points_fragment_acceptButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginEnd="@dimen/spacing_tiny"
        android:backgroundTint="@color/colorPrimaryDark"
        android:enabled="false"
        android:text="@string/dialog_new_points_fragment_accept_button_text"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toStartOf="@+id/dialog_new_points_fragment_dismissButton"
        app:layout_constraintTop_toBottomOf="@+id/dialog_new_points_fragment_countEditText" />

    <Button
        android:id="@+id/dialog_new_points_fragment_dismissButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginEnd="@dimen/spacing_medium"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="@string/dialog_new_points_fragment_dismiss_button_text"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_new_points_fragment_countEditText" />
</androidx.constraintlayout.widget.ConstraintLayout>